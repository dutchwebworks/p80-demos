---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

import { SITE_TITLE } from "../consts";

interface Props {
    title: string;
    description: string;
    permalink: string;
    showBackButton: boolean;
}

const { title, description, permalink, showBackButton } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>{title} - {SITE_TITLE}</title>

        <slot name="begin-head" />

        <meta name="theme-color" content="#3da8f5" />

        <meta name="description" content={description} />

        <meta name="generator" content={Astro.generator} />

        <link rel="canonical" href={permalink} />

        <link rel="preload" href="/fonts/Roboto-Light.woff2" as="font" type="font/woff2" />
        <link rel="preload" href="/fonts/Roboto-Regular.woff2" as="font" type="font/woff2" />

        <link rel="apple-touch-icon" sizes="180x180" href="/img/icons/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/img/icons/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/img/icons/favicon-16x16.png" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />

        <link href="/app.webmanifest" rel="manifest" />

        <script src="/js/register-service-worker.js" defer></script>

        <slot name="end-head" />
    </head>
    <body>
        <slot name="begin-body" />

        <section class="wrapper">
            <Header title={title} showBackButton={showBackButton} />

            <slot />

            <Footer />
        </section>

        <slot name="end-body" />
    </body>
</html>

<style is:global>
    .wrapper {
        margin-inline: auto;
        padding-inline: 20px;
        max-width: var(--site-max-width);
    }
</style>
